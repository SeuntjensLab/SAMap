annots <- paste0(maptab_annot[, variable], "_", maptab_annot[, fly_annotation])
annots <- annots[!grepl("unannotated|artefact", annots)]
annots <- gsub(" ", "_", annots)
for (i in annots) {
	p <- genep[, .(get(i))][V1 != ""]
	p[, ov := gsub("ov_", "", gsub(";.*", "", V1))]
	p[, dm := gsub("dm_", "", gsub("[^;]+;", "", V1))]
	gene_pairs[[i]] <- p[order(dm)]
}
