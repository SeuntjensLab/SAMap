# [4] check gene pairs & markers {

gp <- readRDS("samap_oeb_larvae_adult_flybrain_gene_pairs.rds.gz")
markers_oct <- readRDS("../brain_most_stable_clusters_markers.rds.gz")
setDT(markers_oct)
markers_dm <- fread(file.path(staging, "jjans/analysis/FCA/brain/Davie_et_al/results/Davie_Janssens_Koldere_reanalysis_markers_celltypes_final_new.tsv"))

# dmel genes orthologous to octopus genes from [[OEBsamapClustRuthFlyI]]
map <- readRDS(file.path(staging, "kspan/OEB/ov_dm_map_blast_eggnog.rds.gz"))

lapply (names(gp), function(gpname) {
	print(gpname)
	oclust <- unlist(regmatches(gpname, gregexpr("ov_[0-9]+", gpname))) 
	oclust <- gsub("ov_", "", oclust) 
	fly_annot <- gsub("ov_[0-9]+_", "", gpname) 
	fly_annot <- gsub("_", " ", fly_annot) 
 
	p <- gp[[gpname]][, .(ov, dm)] 
	p[, pair := paste0(ov, "_", dm)] 
	setkey(p, "pair") 
	p <- map[p, .(ov, dm, blast, eggnog)] 
 
	mo <- markers_oct[cluster == oclust] 
	md <- markers_dm[cluster == fly_annot & avg_logFC > 0]
 
	ovl <- as.data.table(cbind( 
		rbind(table(mo[, gene] %in% p[, ov]), table(md[, gene] %in% p[, dm])), 
		rbind(table(unique(p[, ov]) %in% mo[, gene]), table(unique(p[, dm]) %in% md[, gene])) 
	)[, 1:3]) 
	names(ovl) <- c("marker", "overlap", "gene pair") 
	ovl[, species := c("ov", "dm")] 
	print(ovl)
 
 	print("gene pair of two markers:")
	print(nrow(p[ov %in% mo[, gene] & dm %in% md[, gene]]) / nrow(p) * 100)
})

